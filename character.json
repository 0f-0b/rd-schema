{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://0f-0b.github.io/rd-schema/character.json",
  "$ref": "#/definitions/Character",
  "definitions": {
    "Character": {
      "type": "object",
      "properties": {
        "$schema": {
          "type": "string",
          "format": "uri"
        },
        "name": {
          "type": "string"
        },
        "voice": {
          "type": "string"
        },
        "size": {
          "type": "array",
          "items": [
            {
              "type": "integer",
              "minimum": -2147483648,
              "maximum": 2147483647
            },
            {
              "type": "integer",
              "minimum": -2147483648,
              "maximum": 2147483647
            }
          ]
        },
        "clips": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Clip"
          }
        },
        "rowPreviewOffset": {
          "type": "array",
          "items": [
            {
              "type": "number"
            },
            {
              "type": "number"
            }
          ]
        },
        "rowPreviewFrame": {
          "type": "integer",
          "minimum": -2147483648,
          "maximum": 2147483647
        },
        "pivotOffset": {
          "type": "array",
          "items": [
            {
              "type": "number"
            },
            {
              "type": "number"
            }
          ]
        },
        "portraitOffset": {
          "type": "array",
          "items": [
            {
              "type": "number"
            },
            {
              "type": "number"
            }
          ]
        },
        "portraitSize": {
          "type": "array",
          "items": [
            {
              "type": "number"
            },
            {
              "type": "number"
            }
          ]
        },
        "portraitScale": {
          "type": "number"
        }
      },
      "required": [
        "size",
        "clips"
      ],
      "additionalProperties": false
    },
    "Clip": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "frames": {
          "type": "array",
          "items": {
            "type": "integer",
            "minimum": -2147483648,
            "maximum": 2147483647
          }
        },
        "loopStart": {
          "type": "integer",
          "minimum": -2147483648,
          "maximum": 2147483647
        },
        "loop": {
          "type": "string",
          "enum": [
            "yes",
            "onBeat",
            "no"
          ]
        },
        "fps": {
          "type": "number"
        },
        "pivotOffset": {
          "type": "array",
          "items": [
            {
              "type": "number"
            },
            {
              "type": "number"
            }
          ]
        },
        "portraitOffset": {
          "type": "array",
          "items": [
            {
              "type": "number"
            },
            {
              "type": "number"
            }
          ]
        },
        "portraitSize": {
          "type": "array",
          "items": [
            {
              "type": "number"
            },
            {
              "type": "number"
            }
          ]
        },
        "portraitScale": {
          "type": "number"
        }
      },
      "required": [
        "name",
        "frames",
        "loop",
        "fps"
      ],
      "additionalProperties": false
    }
  }
}
