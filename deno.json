{
  "imports": {
    "@dprint/formatter": "jsr:@dprint/formatter@^0.4.0",
    "@dprint/typescript": "npm:@dprint/typescript@^0.95.0",
    "@std/path": "jsr:@std/path@^1.0.0",
    "pe-struct": "npm:pe-struct@0.9.4",
    "type-fest": "npm:type-fest@^5.0.0",
    "zod": "jsr:@zod/zod@4.1.12"
  },
  "compilerOptions": {
    "exactOptionalPropertyTypes": true
  },
  "lint": {
    "exclude": [
      "character.d.ts",
      "level.d.ts"
    ],
    "rules": {
      "include": [
        "verbatim-module-syntax"
      ]
    }
  },
  "tasks": {
    "cache": "deno cache --unstable-raw-imports --allow-import=jsr.io:443 scripts/generate_dts.ts scripts/generate_json_schemas.ts",
    "lint": "deno fmt --check && deno lint && deno check --unstable-raw-imports --all --allow-import=jsr.io:443 scripts/generate_dts.ts && deno check --all --allow-import=jsr.io:443 scripts/generate_json_schemas.ts"
  }
}
